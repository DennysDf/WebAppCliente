@model WebAppCliente.Models.ClienteViewModel

<h2>Novo Cliente</h2>

<form asp-action="NovoCliente">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NomeMae" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeMae" class="form-control" />
                <span asp-validation-for="NomeMae" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Endereco" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
        </div>
     
        <div class="form-group">
            <label asp-for="Idade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Idade" type="number" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Sexo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="EstadoCivil" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EstadoCivil" class="form-control" />
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </div>
    </div>
</form>